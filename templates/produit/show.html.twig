{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-gray-800 mb-4">Produit {{produit.nom}}</h1>

    <div class="overflow-hidden bg-white shadow-md rounded-lg mb-4">
        <table class="min-w-full table-auto">
            <tbody class="divide-y divide-gray-200">
                <tr class="hover:bg-gray-50">
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">
                        Id
                    </th>
                    <td class="px-6 py-4 text-sm text-gray-700">
                        {{ produit.id }}
                    </td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">
                        Nom
                    </th>
                    <td class="px-6 py-4 text-sm text-gray-700">
                        {{ produit.nom }}
                    </td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">
                        Catégorie
                    </th>
                    <td class="px-6 py-4 text-sm text-gray-700">
                        {{ produit.getIdCategorie().getNomCategorie() }}
                    </td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">
                        Etat
                    </th>
                    <td class="px-6 py-4 text-sm text-gray-700">
                        {{ produit.getIdEtat().getNom() }}
                    </td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">
                        Localisation
                    </th>
                    <td class="px-6 py-4 text-sm text-gray-700">
                        {{ produit.getIdEmplacement().getRayon() }}, {{ produit.getIdEmplacement().getEtagere() }}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


    <h2 class="text-3xl font-bold text-gray-800 mb-4">Historique du produits : {{ produit.nom }}</h1>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Date de prêt</th>
                <th>Date de retour</th>
                <th>Retour effectué</th>
                <th>Nom associé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for historique in produit.historiques %}
                <tr>
                    <td>{{ historique.datePret|date('d/m/Y') }}</td>
                    <td>{{ historique.dateRetour|date('d/m/Y') }}</td>
                    <td>{{ historique.retour ? "Oui":"Non"}}</td>
                    <td>{{ historique.nom }}</td>
                    <td><a href="{{ path('app_historique_retour', {'id': historique.id}) }}">Modifier Retour</a></td>
                </tr>
            {% else %}
                Aucun historique pour ce produit
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">Retour</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">Modifier</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
