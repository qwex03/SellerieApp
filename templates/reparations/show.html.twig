{% extends 'base.html.twig' %}

{% block title %}Reparations{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-10">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Réparations</h1>

        <div class="overflow-hidden bg-white shadow-md rounded-lg">
            <table class="min-w-full table-auto">
                <tbody class="divide-y divide-gray-200">
                    <tr>
                        <th class="px-6 py-3 bg-gray-50 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">
                            Id
                        </th>
                        <td class="px-6 py-4 text-sm text-gray-700">{{ reparation.id }}</td>
                    </tr>
                    <tr>
                        <th class="px-6 py-3 bg-gray-50 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">
                            Date de Signalement
                        </th>
                        <td class="px-6 py-4 text-sm text-gray-700">
                            {{ reparation.dateSignalement ? reparation.dateSignalement|date('Y-m-d H:i:s') : '' }}
                        </td>
                    </tr>
                    <tr>
                        <th class="px-6 py-3 bg-gray-50 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">
                            Date de Début
                        </th>
                        <td class="px-6 py-4 text-sm text-gray-700">
                            {{ reparation.dateStart ? reparation.dateStart|date('Y-m-d H:i:s') : '' }}
                        </td>
                    </tr>
                    <tr>
                        <th class="px-6 py-3 bg-gray-50 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">
                            Date de Fin
                        </th>
                        <td class="px-6 py-4 text-sm text-gray-700">
                            {{ reparation.dateEnd ? reparation.dateEnd|date('Y-m-d H:i:s') : '' }}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-6 flex space-x-4">
            <a href="{{ path('app_reparations_index') }}" 
               class="inline-block px-4 py-2 bg-blue-500 text-white font-medium text-sm rounded-md shadow-sm hover:bg-blue-600">
                Back to List
            </a>
            <a href="{{ path('app_reparations_edit', {'id': reparation.id}) }}" 
               class="inline-block px-4 py-2 bg-green-500 text-white font-medium text-sm rounded-md shadow-sm hover:bg-green-600">
                Edit
            </a>
            {{ include('reparations/_delete_form.html.twig', { 'class': 'inline-block px-4 py-2 bg-red-500 text-white font-medium text-sm rounded-md shadow-sm hover:bg-red-600' }) }}
        </div>
    </div>
{% endblock %}
