{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="p-6 max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">User</h1>

    <table class="table-auto w-full border-collapse border border-gray-300">
        <tbody>
        <tr class="border-t border-gray-300">
            <th class="text-left p-4 bg-gray-100 font-semibold">Id</th>
            <td class="p-4">{{ user.id }}</td>
        </tr>
        <tr class="border-t border-gray-300">
            <th class="text-left p-4 bg-gray-100 font-semibold">Email</th>
            <td class="p-4">{{ user.email }}</td>
        </tr>
        <tr class="border-t border-gray-300">
            <th class="text-left p-4 bg-gray-100 font-semibold">Roles</th>
            <td class="p-4">{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="mt-6 flex space-x-4">
        <a href="{{ path('app_user_index') }}" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Retour</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600">Modifier</a>
    </div>
    </div>


    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
